@model AgriculturePresentation.Models.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Profile</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Mail</label>
                    <input type="text" class="form-control" asp-for="Mail" placeholder="Enter Email Address">
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input type="text" class="form-control" asp-for="Phone" placeholder="Enter Phone Number">
                </div>
                <div class="form-group">
                    <label>Password></label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Enter Password">
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Enter Confirm Password">
                </div>
                <button type="submit" class="btn btn-outline-success me-2">Submit</button>
                <a href="/Dashboard/Index/" class="btn btn-outline-danger">Cancel</a>
            </form>
        </div>
    </div>
</div>