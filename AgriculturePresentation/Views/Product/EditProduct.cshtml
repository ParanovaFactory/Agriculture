@model EntityLayer.Concrete.Product

@{
    ViewData["Title"] = "EditProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add New Announcement</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x => x. ProductId)
                    <label for="exampleInputName1">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter Product Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Value</label>
                    <span asp-validation-for="Value" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Value" placeholder="Enter Product Value">
                </div>
                <button type="submit" class="btn btn-outline-success me-2">Submit</button>
                <a href="/Product/Index/" class="btn btn-outline-danger">Cancel</a>
            </form>
        </div>
    </div>
</div>

