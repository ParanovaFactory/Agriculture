@using EntityLayer.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Announcement List</h4>
            <div class="table-responsive pt-5">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Delete</th>
                            <th>Update</th>
                            <th>Status Set</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1"><img src=@item.Image alt="image" /></td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.Date</td>
                                <td><a href="/Announcement/DeleteAnnouncement/ @item.AnnouncementId" class="btn btn-outline-danger">Delete</a></td>
                                <td><a href="/Announcement/EditAnnouncement/ @item.AnnouncementId" class="btn btn-outline-success">Update</a></td>
                                @if (item.Status == true)
                                {
                                    <td><a href="/Announcement/SetStatusFalse/ @item.AnnouncementId" class="btn btn-outline-dark">Status False</a></td>
                                }
                                else
                                {

                                    <td><a href="/Announcement/SetStatusTrue/ @item.AnnouncementId" class="btn btn-outline-dark">Status True</a></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Announcement/AddAnnouncement/" class="btn btn-outline-info">Add Announcement</a>
            </div>
        </div>
    </div>
</div>

