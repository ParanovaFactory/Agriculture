@using EntityLayer.Concrete
@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Address</h4>
            <div class="table-responsive pt-5">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Details</th>
                            <th>City</th>
                            <th>Country</th>
                            <th>Phone</th>
                            <th>Maps</th>
                            @* <th>Delete</th> *@
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Description1</td>
                                <td>@item.Description2</td>
                                <td>@item.Description3</td>
                                <td>@item.Phone</td>
                                <td>@item.Mapinfo</td>@* 
                                <td><a href="/Address/DeleteAddress/ @item.AddressId" class="btn btn-outline-danger">Delete</a></td> *@
                                <td><a href="/Address/EditAddress/ @item.AddressId" class="btn btn-outline-success">Update</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                @* <a href="/Address/AddAddress/" class="btn btn-outline-info">Add Address</a> *@
            </div>
        </div>
    </div>
</div>