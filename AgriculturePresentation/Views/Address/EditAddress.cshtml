@model EntityLayer.Concrete.Address
@{
    ViewData["Title"] = "EditAddress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Address</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Address Details</label>
                    @Html.HiddenFor(x => x.AddressId)
                    <span asp-validation-for="Description1" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Description1" placeholder="Enter Address Details">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">City</label>
                    <span asp-validation-for="Description2" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Description2" placeholder="Enter City">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Country</label>
                    <span asp-validation-for="Description3" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Description3" placeholder="Enter Country">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Phone</label>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Phone" placeholder="Enter Phone">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Map Location</label>
                    <span asp-validation-for="Mapinfo" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Mapinfo" placeholder="Enter Map Location">
                </div>
                <button type="submit" class="btn btn-outline-success me-2">Submit</button>
                <a href="/Address/Index/" class="btn btn-outline-danger">Cancel</a>
            </form>
        </div>
    </div>
</div>