@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gallery</h4>
            <div class="table-responsive pt-5">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1"><img src=@item.ImageUrl alt="image" /></td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><a href="/Image/DeleteImage/ @item.ImageId" class="btn btn-outline-danger">Delete</a></td>
                                <td><a href="/Image/EditImage/ @item.ImageId" class="btn btn-outline-success">Update</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Image/AddImage/" class="btn btn-outline-info">Add Image</a>
            </div>
        </div>
    </div>
</div>