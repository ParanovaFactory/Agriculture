@using EntityLayer.Concrete
@model List<Contact>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Messages</h4>
            <div class="table-responsive pt-5">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name and Surname</th>
                            <th>Date</th>
                            <th>Details</th>
                            <th>Delete</th>
                            @* <th>Update</th> *@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Date</td>
                                <td><a href="/Contact/MessageDetails/ @item.ContactId" class="btn btn-outline-success">Message Detail</a></td>
                                <td><a href="/Contact/DeleteContact/ @item.ContactId" class="btn btn-outline-danger">Delete</a></td>
                                @* <td><a href="/Contact/EditContact/ @item.ContactId" class="btn btn-outline-success">Update</a></td> *@
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                @* <a href="/Contact/AddContact/" class="btn btn-outline-info">Add Message</a> *@
            </div>
        </div>
    </div>
</div>
